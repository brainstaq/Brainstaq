<% content_for :title, "Donation History" %>
<!-- start of page-header -->
<section class="page-header bg-light-gray has-shapes has-bg-brash bg-brash-bottom" style="background-image: url(<%= image_path "banner.svg" %>)">
  <div class="container h-100">
    <div class="row d-flex align-items-center h-100">
      <div class="col-md-12 text-center">
        <h2 class="h1 font-weight-bold">Donations</h2>
        <nav class="mt-15" aria-label="breadcrumb">
          <ol class="breadcrumb font-weight-bold bg-transparent p-0 justify-content-center">
            <li class="breadcrumb-item"><%= link_to "Home", root_path, class: "text-black-300" %></li>
            <li class="breadcrumb-item text-primary" aria-current="page">Donations</li>
          </ol>
        </nav>
      </div>
    </div>
  </div>
  <div class="shape-1 bg-secondary shape-xs rounded-circle"></div>
  <div class="shape-2 bg-primary shape-xs-2 rounded-circle"></div>
  <div class="shape-3 bg-primary shape-sm-2 rounded-circle"></div>
  <div class="shape-4 bg-tertiary shape-xs rounded-circle"></div>
  <div class="shape-5 bg-tertiary shape-xs rounded-circle"></div>
  <div class="shape-6 bg-primary shape-sm rounded-circle"></div>
  <div class="shape-7 bg-primary shape-xs-2 rounded-circle"></div>
  <div class="shape-8 bg-secondary shape-xs rounded-circle"></div>
</section>
<!-- end of page-header -->
# <header class="section-header mb-5" style="padding-top: 50px;">
#   <%# <h3 span class="text-primary">Donations</span></h3> %>
# </header>
<div class="container">
  <div class="row">
    <div class="col-12 table-responsive">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">Donor</th>
            <th scope="col">Amount</th>
            <th scope="col">Date</th>
            <th scope="col">Perk</th>
          </tr>
        </thead>
        <% @idea.donations.each do |donation| %>
          <tbody>
            <tr>
              <td>
                <div class="d-flex align-items-center">
                  <div class="mr-3">
                    <%= image_tag donation.user.image_url, style:"width:28px; height: 28px; margin-right: 0px;", class: "rounded-circle" %>
                  </div>
                  <div class="">
                    <p class="font-weight-bold mb-0"><%= link_to (donation.user.full_name), profile_path(donation.user.username) %></p>
                    <p class="text-muted mb-0"><%=donation.user.email %></p>
                    <p class="text-muted mb-0"><%= donation.user.phone %></p>
                  </div>
                </div>
              </td>
              <td><%= number_to_currency(donation.amount/100, :unit => "â‚¦") %></td>
              <td><%= donation.created_at.strftime("%d/%m/%Y") %></td>
              <td>
                <% if donation.perk %>
                  <%= donation.perk.title %>
                <% else %>
                  N/A
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
